<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".ParentHome">

    <LinearLayout
        android:layout_gravity="center"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:onClick="fence"
            android:layout_margin="8dp"
            app:cardCornerRadius="19dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#4E4D4D"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="160dp"
            tools:ignore="KeyboardInaccessibleWidget"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                android:onClick="fence"
                android:padding="10dp"
                android:src="@drawable/fence"
                android:layout_width="match_parent"
                android:layout_height="160dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:onClick="view"
            android:layout_margin="8dp"
            app:cardCornerRadius="19dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#4E4D4D"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="160dp"
            tools:ignore="KeyboardInaccessibleWidget">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/location"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_margin="8dp"
            app:cardCornerRadius="19dp"
            android:clickable="true"
            android:onClick="next"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#4E4D4D"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="160dp"
            tools:ignore="KeyboardInaccessibleWidget"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="15sp"
                    android:src="@drawable/landline"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="8dp"
            app:cardCornerRadius="19dp"
            android:id="@+id/r1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#4E4D4D"
            android:layout_weight="1"
            android:onClick="next"
            android:layout_width="0dp"
            android:layout_height="160dp"
            tools:ignore="KeyboardInaccessibleWidget">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="15dp"
                    android:src="@drawable/chatd"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:onClick="view"
        android:id="@+id/chilce"
        android:layout_margin="8dp"
        app:cardCornerRadius="19dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#4E4D4D"
        android:layout_width="160dp"
        android:layout_height="160dp"
        tools:ignore="KeyboardInaccessibleWidget">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.854"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/chi" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>